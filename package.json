{
  "name": "cloud-drive-renamer",
  "version": "0.2.1",
  "description": "批量重命名工具，支持夸克网盘（阿里云盘和百度网盘开发中）",
  "type": "module",
  "scripts": {
    "dev": "npm run sync:version && vite",
    "build": "npm run sync:version && npm run lint && npm run typecheck && npm run test:ci && tsc && vite build",
    "preview": "vite preview",
    "sync:version": "node scripts/sync-version.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test:ci",
    "ci": "npm run validate && npm run build",
    "resize": "node scripts/resize-screenshots.js",
    "verify:release": "node scripts/verify-release.js"
  },
  "keywords": [
    "chrome-extension",
    "rename",
    "cloud-drive",
    "quark",
    "aliyun",
    "baidu"
  ],
  "author": "CloudDrive Renamer Team",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.260",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.57.1",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@lit-labs/virtualizer": "^2.1.1",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "lit": "^3.3.1"
  }
}
